<%- include partials/header.ejs %>
<% if(displayMessage) { %>
	<h3><%=message%></h3>
<% } %>
<form action="/admin/addmodel" method="POST">
	<label for="name">Car Model</label>
	<input type="text" name="name" id="name" autocomplete="off">
	<label for="carClass">Class</label>
	<select name="carClass" id="carClass">
		<% ['Bike-upto 150cc', 'Bike-above 150cc', 'Scooter', 'Car-Hatchback', 'Car-Sedan', 'Car-SUV'].forEach(function(element) { %>
			<option value="<%= element %>"><%= element %></option>
		<% }) %>
	</select>
	<label for="engineCC">Engine(cc)</label>
	<input type="text" name="engineCC" id="engineCC" autocomplete="off">
	<label for="enginePower">Engine Power(bhp)</label>
	<input type="text" name="enginePower" id="enginePower" autocomplete="off">
	<label for="pricePerHour">Price(per hour)</label>
	<input type="text" id="pricePerHour" name="pricePerHour">
	<label for="seating">Seating Capacity</label>
	<input type="text" id="seating" name="seating">
	<label for="imageURL">Image URL</label>
	<input type="text" id="imageURL" name="imageURL">			
	<label for="transmission">Transmission</label>
	<select name="transmission" id="transmission">
		<% ['Automatic', 'Manual', 'Semi Automatic'].forEach(function(element) { %>
			<option value="<%= element %>"><%= element %></option>
		<% }) %>
	</select>
	<label for="mileage">Mileage</label>
	<input type="text" id="mileage" name="mileage">			
	<button type="submit">Add Model</button>
</form>
<a href="/admin/addcar">Add a Car</a>
<a href="/models">All Models</a>
<%- include partials/footer.ejs %> 